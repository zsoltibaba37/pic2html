#!/bin/bash
#
# Fill arraydir from folder names
#
for dir in */; do echo "$dir"; done | cut -d "/" -f1 > dir.txt
#
readarray arraydir < dir.txt
#
rm dir.txt
#
# pic2html run in each folder
#
c=0
while [ "y${arraydir[c]}" != "y" ]
do
	echo "################################################################################"
	echo " Ugrás a" ${arraydir[c]} "könyvtárba."
	cd ${arraydir[c]}
	pic2html
	cd ..
	c=$(( $c + 1 ))
done
